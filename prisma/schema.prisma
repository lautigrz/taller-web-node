generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  name                String
  lastname            String
  email               String               @unique
  password            String
  direccion           String
  refreshToken        String?
  rol                 Rol                  @default(CLIENTE)
  passwordResetTokens PasswordResetToken[]

  carritos Carrito[]
  pedidos  Pedido[]
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([token])
}

enum Genero {
  MASCULINO
  FEMENINO
  UNISEX
}

model Producto {
  id            Int               @id @default(autoincrement())
  titulo        String            @default("Sin titulo")
  descripcion   String
  precio        Decimal           @db.Decimal(10, 2)
  cantidad      Int               @default(0)
  imagenes      Imagen[]
  genero        String?
  creadoEn      DateTime          @default(now())
  actualizadoEn DateTime          @updatedAt
  equipoId      Int
  habilitado    Boolean           @default(true)
  equipo        Equipo            @relation(fields: [equipoId], references: [id])
  carritos      CarritoProducto[]
  tallas        Talla[]           @relation("ProductoTallas")
  pedidos       PedidoProducto[]
}

model Talla {
  id    Int    @id @default(autoincrement())
  talla String

  productos Producto[] @relation("ProductoTallas")
}

model Imagen {
  id         Int      @id @default(autoincrement())
  url        String
  orden      Int?
  productoId Int
  producto   Producto @relation(fields: [productoId], references: [id])
}

model Liga {
  id      Int      @id @default(autoincrement())
  name    String
  icon    String
  equipos Equipo[]
}

model Equipo {
  id       Int        @id @default(autoincrement())
  name     String
  icon     String
  ligaId   Int
  liga     Liga       @relation(fields: [ligaId], references: [id])
  Producto Producto[]
}

model Carrito {
  id       Int      @id @default(autoincrement())
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  creadoEn DateTime @default(now())
  activo   Boolean  @default(true)

  productos CarritoProducto[]
}

model CarritoProducto {
  id         Int      @id @default(autoincrement())
  carrito    Carrito  @relation(fields: [carritoId], references: [id])
  carritoId  Int
  producto   Producto @relation(fields: [productoId], references: [id])
  productoId Int
  cantidad   Int      @default(1)
  subtotal   Decimal? @db.Decimal(10, 2)

  @@unique([carritoId, productoId])
}

model Pedido {
  id        Int             @id @default(autoincrement())
  user      User            @relation(fields: [userId], references: [id])
  userId    Int
  creadoEn  DateTime        @default(now())
  total     Decimal         @db.Decimal(10, 2)
  direccion String
  productos PedidoProducto[]
}


model PedidoProducto {
  id            Int       @id @default(autoincrement())
  pedido        Pedido    @relation(fields: [pedidoId], references: [id])
  pedidoId      Int
  producto      Producto  @relation(fields: [productoId], references: [id])
  productoId    Int
  cantidad      Int
  talla         String    
  precioUnitario Decimal   @db.Decimal(10, 2)
  
  @@unique([pedidoId, productoId, talla])
}

model Deporte {
  id Int  @id @default(autoincrement())
  deporte DeporteType
}

enum DeporteType {
  FUTBOL
  BASQUET
}
enum CategoriaType {
  SELECCION
  CLUB
}
enum Rol {
  CLIENTE
  ADMIN
}


